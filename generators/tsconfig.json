    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false
  },
  "include": ["*/**/*.ts"],
  "exclude": ["node_modules", "templates"]
}
