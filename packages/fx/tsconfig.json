{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "paths": {
      "@config": ["./src/config.ts"],
      "@types": ["./src/types.ts"]
    }
  },
  "exclude": ["dist", "templates"]
}
